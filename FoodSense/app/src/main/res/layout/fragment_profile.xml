<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FOOD SENSE"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Informations"
            android:textSize="18sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" />

        <!-- Name and Surname Row -->
        <LinearLayout
            android:id="@+id/layoutNameRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            android:layout_marginTop="24dp">

            <EditText
                android:id="@+id/etName"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:hint="Name"
                android:background="@drawable/bg_profile_input"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:inputType="textPersonName"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/etSurname"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:hint="Surname"
                android:background="@drawable/bg_profile_input"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:inputType="textPersonName"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Birth Date and Gender Row -->
        <LinearLayout
            android:id="@+id/layoutDateGenderRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/layoutNameRow"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/etBirthDate"
                android:layout_width="0dp"
                android:textColor="#000000"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:hint="Birth Date"
                android:background="@drawable/bg_profile_input"
                android:paddingStart="16dp"
                android:paddingEnd="48dp"
                android:focusable="false"
                android:clickable="true"
                android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                android:layout_marginEnd="8dp" />

            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:background="@drawable/bg_profile_input"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Change Email -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Change E-mail"
            android:background="@drawable/bg_profile_input"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#000000"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/layoutDateGenderRow"
            android:layout_marginTop="16dp" />

        <!-- Change Password -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Change Password"
            android:background="@drawable/bg_profile_input"
            android:textColorHint="#888888"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/etEmail"
            android:layout_marginTop="16dp" />

        <!-- Update Restricted Ingredients Link -->
        <TextView
            android:id="@+id/tvUpdateIngredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Your Restricted Ingredients"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/etPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

        <!-- android:textDecoration="underline" -->

        <!-- Update Button -->
        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="Update"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:background="@drawable/bg_button_black"
            android:paddingStart="48dp"
            android:paddingEnd="48dp"
            app:layout_constraintTop_toBottomOf="@id/tvUpdateIngredients"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="80dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>