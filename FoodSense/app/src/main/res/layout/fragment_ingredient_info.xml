<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Close Button -->
    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:contentDescription="Close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ingredient Awareness Guide\nWelcome to Food Sense!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/btnClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This page helps you understand how common food ingredients affect the body and serves as a simple guide for mindful eating, not as a medical diagnosis."
        android:textSize="14sp"
        android:textColor="#666666"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp" />

    <!-- Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="24dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Lactose -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¥› Lactose"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lactose is a natural sugar found in milk and dairy products.\n\nPeople with lactose intolerance may have difficulty digesting it, which can lead to symptoms like bloating, cramps, or nausea.\n\nLactose-free alternatives such as almond, soy, or oat milk are recommended."
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp" />

            <!-- Gluten -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸž Gluten"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gluten is a protein found in wheat, barley, and rye.\n\nFor individuals with celiac disease or gluten sensitivity, consuming gluten can cause inflammation, abdominal pain, and fatigue.\n\nChoosing gluten-free grains such as rice, corn, or quinoa can help reduce symptoms."
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp" />

            <!-- Peanuts -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¥œ Peanuts"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peanut allergies are among the most common and can range from mild reactions (like itching) to severe anaphylaxis.\n\nAlways check food labels carefully, as peanuts can be hidden in sauces, snacks, and desserts."
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp" />

            <!-- Eggs -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¥š Eggs"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Egg allergies typically occur in children but can also affect adults.\n\nSymptoms may include skin rashes, congestion, or stomach discomfort.\n\nMany vegan recipes replace eggs with ingredients like chia seeds, flaxseed, or applesauce."
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>